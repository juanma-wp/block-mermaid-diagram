{
  "name": "mermaid/mermaid-diagram",
  "description": "Create beautiful diagrams and flowcharts using Mermaid syntax directly in your WordPress posts and pages",
  "type": "wordpress-plugin",
  "keywords": [
    "wordpress",
    "mermaid",
    "diagram",
    "flowchart",
    "visualization",
    "block",
    "gutenberg"
  ],
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "WordPress Telex",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.0"
  },
  "require-dev": {
    "wp-coding-standards/wpcs": "^3.1",
    "squizlabs/php_codesniffer": "^3.12",
    "phpcsstandards/phpcsutils": "^1.1",
    "phpcsstandards/phpcsextra": "^1.4",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.1"
  },
  "scripts": {
    "lint": "@php -d error_reporting='E_ALL & ~E_DEPRECATED' vendor/bin/phpcs -d memory_limit=512M",
    "lint-fix": "@php -d error_reporting='E_ALL & ~E_DEPRECATED' vendor/bin/phpcbf -d memory_limit=512M"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "platform": {
      "php": "7.0.0"
    }
  }
}